    <!-- Locale -->
    <PreferenceScreen android:title="@string/settings_category_locale_title" >
        <Preference
            android:defaultValue="@string/lang_code_default"
            android:key="language"
            android:title="@string/settings_title_language" />
        <Preference
            android:defaultValue="@string/kb_id_default"
            android:key="keyboard"
            android:title="@string/settings_title_keyboard" />
        <ListPreference
            android:defaultValue="@string/curr_symbol_default"
            android:entries="@array/currency_names"
            android:entryValues="@array/currency_symbols"
            android:key="currency"
            android:title="@string/settings_title_currency" />
        <ListPreference
            android:defaultValue="@string/settings_locale_button_id_next_locale"
            android:entries="@array/settings_locale_button_behavior_names"
            android:entryValues="@array/settings_locale_button_behavior_values"
            android:key="behavior_locale_button"
            android:summary="@string/settings_locale_button_summary"
            android:title="@string/settings_locale_button_title" />
    </PreferenceScreen>

    <!-- Customize -->
    <PreferenceScreen android:title="@string/settings_category_customize_title" >
        <PreferenceScreen
            android:summary="@string/settings_program_keys_summary"
            android:title="@string/settings_program_keys_title" >
            <ListPreference
                android:defaultValue="@string/any_key_action_id_default"
                android:entries="@array/settings_any_key_action_names"
                android:entryValues="@array/settings_any_key_action_values"
                android:key="any_key_action"
                android:title="@string/settings_title_any_key_action" />
            <ListPreference
                android:defaultValue="@string/any_key_long_action_id_default"
                android:entries="@array/settings_any_key_action_names"
                android:entryValues="@array/settings_any_key_action_values"
                android:key="any_key_long_action"
                android:title="@string/settings_title_any_key_long_action" />
            <ListPreference
                android:defaultValue="@string/return_key_long_action_id_default"
                android:entries="@array/settings_any_key_action_names"
                android:entryValues="@array/settings_any_key_action_values"
                android:key="return_key_long_action"
                android:title="@string/settings_title_return_key_long_action" />
        </PreferenceScreen>

        <Preference
            android:key="theme"
            android:selectable="true"
            android:summary="@string/settings_summary_theme"
            android:title="@string/settings_title_theme" />
        <Preference
            android:key="photo_wallpaper"
            android:selectable="true"
            android:summary="@string/settings_summary_photo_wallpaper"
            android:title="@string/settings_title_photo_wallpaper" />

        <PreferenceScreen
            android:key="key_height"
            android:summary="@string/settings_summary_key_height"
            android:title="@string/settings_title_key_height" >
            <Preference
                android:defaultValue="50"
                android:key="portrait_key_height"
                android:title="@string/settings_title_portrait_key_height" />
            <Preference
                android:defaultValue="30"
                android:key="landscape_key_height"
                android:title="@string/settings_title_landscape_key_height" />
        </PreferenceScreen>

        <Preference
            android:defaultValue="16"
            android:key="candidates_height"
            android:summary="@string/settings_summary_candidate_height"
            android:title="@string/settings_title_candidate_height" />
        <Preference
            android:defaultValue="1"
            android:key="keyboard_padding_bottom"
            android:summary="@string/settings_summary_key_bottom_padding_height"
            android:title="@string/settings_title_key_bottom_padding_height" />
    </PreferenceScreen>

    <!-- Typing -->
    <PreferenceScreen
        android:title="@string/settings_category_typing_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="auto_caps"
            android:summary="@string/settings_summary_auto_caps"
            android:title="@string/settings_title_auto_caps" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="smart_spaces"
            android:summary="@string/settings_summary_smart_spaces"
            android:title="@string/settings_title_smart_spaces" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="double_space"
            android:summary="@string/settings_summary_double_space"
            android:title="@string/settings_title_double_space" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="long_press_symbols"
            android:summary="@string/settings_summary_long_press_symbols"
            android:title="@string/settings_title_long_press_symbols" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="preview_popup"
            android:title="@string/settings_title_show_key_preview_popups" />
    </PreferenceScreen>

    <!-- Suggestions -->
    <PreferenceScreen android:title="@string/settings_category_suggestions_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="show_suggestions"
            android:summary="@string/settings_summary_show_suggestions"
            android:title="@string/settings_title_show_suggestions" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="auto_select"
            android:summary="@string/settings_summary_auto_select"
            android:title="@string/settings_title_auto_select" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="include_corrections"
            android:summary="@string/settings_summary_include_corrections"
            android:title="@string/settings_title_include_corrections" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="nextword"
            android:summary="@string/settings_summary_predict_nextword"
            android:title="@string/settings_title_predict_nextword" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="include_contacts"
            android:summary="@string/settings_summary_include_contacts"
            android:title="@string/settings_title_include_contacts" />
        <!--
         <CheckBoxPreference
            android:defaultValue="true"
