    <!-- Feedback -->
    <PreferenceScreen
        android:title="@string/settings_category_feedback_title" >
        <Preference
            android:key="sound_volume"
            android:title="@string/settings_title_sound_key_click" />
        <Preference
            android:key="vibrate"
            android:summary="@string/vibrate_notime"
            android:title="@string/settings_title_vibrate_on_key_press" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="vibrate_on_typo_correction"
            android:summary="@string/settings_summary_vibrate_on_typo_correction"
            android:title="@string/settings_title_vibrate_on_typo_correction" />

        <Preference
            android:key="long_press_duration"
            android:summary=""
            android:title="@string/settings_title_long_press_duration" />
    </PreferenceScreen>
    
    
    
    <PreferenceScreen
        android:title="@string/settings_title_swipe_actions" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="swipe_num_row"
            android:summary="@string/settings_summary_swipe_num_row"
            android:title="@string/settings_title_swipe_num_row" />

        <ListPreference
            android:defaultValue="@string/any_key_action_id_arrow_keypad"
            android:entries="@array/settings_swipe_action_names"
            android:entryValues="@array/settings_swipe_action_values"
            android:key="swipe_left_action"
            android:summary="Arrow keys"
            android:title="@string/settings_title_swipe_left_action" />
        <ListPreference
            android:defaultValue="@string/any_key_action_id_default"
            android:entries="@array/settings_swipe_action_names"
            android:entryValues="@array/settings_swipe_action_values"
            android:key="swipe_right_action"
            android:summary="Voice input"
            android:title="@string/settings_title_swipe_right_action" />
        <ListPreference
            android:defaultValue="@string/swipe_action_id_do_nothing"
            android:entries="@array/settings_swipe_action_names"
            android:entryValues="@array/settings_swipe_action_values"
            android:key="swipe_up_action"
            android:summary="Do nothing"
            android:title="@string/settings_title_swipe_up_action" />
        <ListPreference
            android:defaultValue="@string/swipe_action_id_do_nothing"
            android:entries="@array/settings_swipe_action_names"
            android:entryValues="@array/settings_swipe_action_values"
            android:key="swipe_down_action"
            android:summary="Do nothing"
            android:title="@string/settings_title_swipe_down_action" />
    </PreferenceScreen>

    <Preference
        android:key="shortcut"
        android:title="@string/settings_title_shortcut" />

    <PreferenceScreen
        android:title="@string/settings_category_advanced_title" >

        <!-- Speech Input -->
        <PreferenceCategory
            android:key="speech_input"
            android:title="@string/settings_category_speech_input" >
            <CheckBoxPreference
                android:defaultValue="true"
                android:key="speech_input_closest_match"
                android:summary="@string/settings_summary_closest_match"
                android:title="@string/settings_title_closest_match" />
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/settings_category_debug" >
            <CheckBoxPreference
                android:defaultValue="false"
                android:key="debug_mode"
                android:summary="@string/settings_summary_debug_mode"
                android:title="@string/settings_title_debug_mode" />

            <Preference
                android:key="submit_logs"
                android:selectable="true"
                android:summary="@string/settings_summary_submit_logs"
                android:title="@string/settings_title_submit_logs" />
        </PreferenceCategory>

        <Preference
            android:key="coupon"
            android:selectable="true"
            android:summary="@string/settings_summary_enter_coupon"
            android:title="@string/settings_title_enter_coupon_code" />
    </PreferenceScreen>

</PreferenceScreen>